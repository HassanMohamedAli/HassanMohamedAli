@using POSDashboard.Business.BE;
@{
    ViewBag.Title = "Index";
    List<Definitions.ScreenLanguage> controlsLang = ((List<Definitions.ScreenLanguage>)ViewBag.ScreenLanguage);
    ViewBag.Title = controlsLang.Find(x => x.ControlID.Equals("lblTitle")).ControlDesc;
}


<style type="text/css">
    .count {
        font-size: 25px !important;
    }
</style>
<div class="row" style="display: inline-block;">


    <form class="form-horizontal form-label-left">


