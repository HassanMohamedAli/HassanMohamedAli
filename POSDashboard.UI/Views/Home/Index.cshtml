                @Html.DropDownList("ddlPeriodType", new SelectList((List<POSDashboard.Business.BE.Definitions.GenericList>)ViewBag.PeriodTypes, "Id", "Name"), new { style = "width: 98%;", @class = "NewDropDown border", Name = "PERIOD_TYPE_ID", @tabindex = 3 })


            </div>
        </div>


    </form>








